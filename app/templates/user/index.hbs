<h2>Users</h2>

<div>
{{#if model}}
  <table>
    <tr>
      <th>Name</th>
      <th>E-Mail</th>
      <th></th>
      <th></th>
    </tr>

    {{#each model as |user|}}
      <tr>
        <td>{{user.name}}</td>
        <td>{{user.eMail}}</td>
        <td>{{link-to "Edit" "user.edit" user}}</td>
        <td><button {{action "delete" user}} class="btn-delete">Delete</button></td>
      </tr>
    {{/each}}
  </table>
{{else}}
  No users available
{{/if}}
</div>

{{link-to "Add User" "user.new" class="top-margin"}}
